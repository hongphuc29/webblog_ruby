<div class="container1">
  <div class="row">
    <div class="col-md-8 offset-md-2">
      <h1 class="text-center">BÀI VIẾT</h1>
      <hr>
      <div id="posts">
        <% @posts.each do |post| %>
          <div class="card mb-4">
            <div class="card-body">
              <%= render post %>
              <p class="text-center">
                <%= link_to "Xem bài viết", post, class: "btn btn-primary" %>
              </p>
            </div>
          </div>
        <% end %>
      </div>
      <div class="text-center">
        <%= link_to "Tạo bài viết mới", new_post_path, class: "btn btn-success" %>
      </div>
    </div>
  </div>
</div>
